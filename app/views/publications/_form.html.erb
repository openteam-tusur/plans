<tr class='exercise_form'>
  <td colspan=3>
    <%= simple_form_for [association_chain, resource].flatten, :remote => true do |f| %>
      <%= f.input :publication_kind, :as => :hidden %>

      <%= f.input :text %>
      <%= f.input :url %>

      <div class="buttons">
        <%= f.submit %>
        <% if resource.new_record? %>
          <%= link_to 'Отмена', '#', :class => 'cancel new_record' %>
        <% else %>
          <%= link_to 'Отмена', resource_path, :remote => true %>
        <% end %>
      </div>
    <% end %>
  </td>
</tr>
