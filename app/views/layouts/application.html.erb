<!DOCTYPE html>
<html>
<head>
  <title>Plans</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="top_menu">
    <ul>
      <% Year.order(:number).each do |year| %>
        <li <%= 'class=active' if year.number.to_s == params[:year_id] %>>
          <%= link_to year.number, year_specialities_path(year.number) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="content">
    <%= yield %>
  </div>
</body>
</html>
