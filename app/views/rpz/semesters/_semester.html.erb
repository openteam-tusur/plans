<table>
  <thead>
    <tr>
      <th>Номер</th>
      <th rowspan='2'>Вид обучения</th>
      <th rowspan='2'>Всего часов</th>
      <th rowspan='2'>Итог</th>
      <% if semester.weeks.any? %>
        <th colspan='<%= semester.weeks.count %>'>Распределение занятий по неделям</th>
      <% end %>
      <th rowspan='2'>Форма учёта</th>
      <th>Кафедра</th>
      <th rowspan='2'>Поток</th>
    </tr>
    <tr>
      <th>Цикл</th>
      <% semester.weeks.each do |week| %>
        <th class='week'><%= week %></th>
      <% end %>
      <th>Препод.</th>
    </tr>
  </thead>
  <tbody>
    <% semester.disciplines.each do |discipline| %>
      <%= render :partial => '/rpz/disciplines/discipline', :locals => {:discipline => discipline, :semester => semester} %>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <% semester.checks.group_by(&:kind).each do |kind, checks| %>
      <td>
        <%= t kind, :count => checks.count %>
      </td>
    <% end %>
  </tr>
</table>
