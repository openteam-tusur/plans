<tfoot>
  <tr>
    <th colspan='2'>Итого:</th>
    <th><%= semester.loadings.select(&:classroom?).map(&:value).sum %></th>
    <th></th>
    <% semester.weeks.each do %>
      <th></th>
    <% end %>
    <th colspan='3'>
      <dl>
        <% semester.checks.group_by(&:plural_kind_report).sort.each do |kind, checks| %>
          <dt><%= kind.text %></dt>
          <dd><%= checks.count %></dd>
        <% end %>
      </dl>
    </th>
  </tr>
</tfoot>
