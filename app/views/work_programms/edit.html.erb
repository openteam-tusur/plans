<%= simple_form_for [association_chain, resource].flatten do |form| %>
  <% resource.disciplines.group_by(&:cycle).each do |cycle, disciplines| %>
    <%= form.association :related_disciplines, :collection => disciplines - [resource.discipline], :as => :check_boxes, :label => cycle, :wrapper_html => { :class => 'cycle_wrapper' } %>
  <% end %>

  <%= form.submit %>
<% end %>
