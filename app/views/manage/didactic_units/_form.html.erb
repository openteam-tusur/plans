<h1><%= t("#{action_name}_#{resource_class.name.underscore}") %></h1>

<%= simple_form_for [:manage, parent, resource] do |f| %>
  <%= f.input :discipline %>
  <%= f.input :content %>

  <div class="buttons">
    <%= f.submit %>
    <%= link_to 'Отмена', resource.new_record? ? parent_path : resource_path %>
  </div>
<% end %>
