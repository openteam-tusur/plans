<li class='ajaxed_item'>
  <%= simple_form_for [:manage, @year, @speciality, @subspeciality, @discipline, @work_programm], :remote => true, :html => { :class => 'new_work_programm' } do | f | %>
    <%= f.input :year, :label => 'Укажите год рабочей программы' %>
    <%= f.input :generate, :as => :boolean, :label => 'Пожалуйста, предзаполните рабочую программу на основании ГОС' if resource.gos2? %>
    <% if can? :upload_file, @work_programm %>
      <div class='add_file_wrapper'>
        <%= link_to 'Выбрать файл', '#', :class => 'choose_file' %>
        <%= f.input :vfs_path, :as => :hidden, :input_html => {:params => "vfs_path=/plans/#{@year.number}/#{t(@speciality.degree)}/#{@speciality.code}/#{@subspeciality.subdepartment.abbr}/#{@subspeciality.title}/рабочие программы/"} %>
      </div>
    <% end %>
    <div class="buttons">
      <%= f.submit  %>
      <%= link_to 'Отмена', '#', :class => 'cancel_link' %>
    </div>
  <% end %>
</li>
