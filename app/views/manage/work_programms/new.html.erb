<%= simple_form_for [:manage, @year, @speciality, @subspeciality, @discipline, @work_programm], :remote => true do | f | %>
  <%= f.input :year, :label => 'Укажите год рабочей программы' %>
  <%= f.input :generate, :as => :boolean, :label => 'Пожалуйста, предзаполните рабочую программу на основании ГОС' %>
  <div class="buttons">
    <%= f.submit  %>
    <%= link_to 'Отмена', '#', :class => 'cancel_link' %>
  </div>
<% end %>
