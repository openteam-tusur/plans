<div class="ajaxed_item">
  <% if resource %>
    <%= work_plan_api_url resource %>
    <% if can? :manage, resource %>
      <div class 'links'>
        <%= link_to "Редактировать РУП", edit_manage_year_speciality_subspeciality_work_plan_path(@year, @speciality, @subspeciality), :remote => true, :class => 'edit_link' %>
        <%= link_to "Удалить РУП", manage_year_speciality_subspeciality_work_plan_path(@year, @speciality, @subspeciality), :method => :delete, :confirm => t('are_you_sure?'), :remote => true, :class => 'remove_link' %>
      </div>
    <% end %>
  <% else %>
    <div class="warning notice">
      Необходимо загрузить РУП.
    </div>
    <% if can?(:manage, resource || @subspeciality.build_work_plan) %>
      <%= link_to 'Загрузить РУП', new_manage_year_speciality_subspeciality_work_plan_path(@year, @speciality, @subspeciality), :class => 'add_link new_link', :remote => true %>
    <% end %>
  <% end %>
</div>
