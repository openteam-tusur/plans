<tr class="ajaxed_item">
  <td>
    <%= self_education_item.title %>
    <%= render :partial => 'manage/work_programms/appendixes', :locals => { :appendix => self_education_item.appendix, :parent => self_education_item } %>
  </td>
  <td class='hours centered'>
    <%= self_education_item.hours %>
  </td>
  <td class='centered'>
    <%= self_education_item.human_control.join(', ') if self_education_item.human_control.present? %>
  </td>
  <td class='centered'>
    <% if can? :modify, @work_programm %>
      <%= link_to "править", edit_manage_year_speciality_subspeciality_discipline_work_programm_self_education_item_path(@year, @speciality, @subspeciality, @discipline, @work_programm, self_education_item), :remote => true, :class => 'edit_link' %>
      <%= link_to "удалить", manage_year_speciality_subspeciality_discipline_work_programm_self_education_item_path(@year, @speciality, @subspeciality, @discipline, @work_programm, self_education_item), :remote => true, :method => :delete, :confirm => t('are_you_sure?'), :class => 'remove_link' %>
    <% end %>
  </td>
</tr>
